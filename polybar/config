label-visible-padding = 3

label-urgent = %index%
label-urgent-foreground = #ffffff
label-urgent-background = #bd2c40
label-urgent-padding = 3
label-urgent-underline = #000000

[module/pulseaudio-control]
type = custom/script
exec = $HOME/scripts/pulseaudio-control.sh --icons-volume "ï€§ ,ï€¨ " --icon-muted "ï€¦ " --sink-nicknames-from "device.description" --sink-nickname "alsa_output.pci-0000_00_1b.0.analog-stereo:îŒ­  Speakers" --sink-nickname "alsa_output.usb-Kingston_HyperX_Virtual_Surround_Sound_00000000-00.analog-stereo:îŒ  Headphones" listen
tail = true
